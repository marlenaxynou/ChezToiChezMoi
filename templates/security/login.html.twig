{% extends 'base.html.twig' %}

{% block title %}Me connecter - ChezToiChezMoi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-page">
    <main class="auth-container">
        {% if app.user %}
        <div class="auth-alert">
            <i class="fas fa-user-check"></i>
            <div>
                <p>Vous êtes déjà connecté(e) en tant que <strong>{{ app.user.userIdentifier }}</strong></p>
                <a href="{{ path('app_logout') }}" class="auth-logout">
                    <i class="fas fa-sign-out-alt"></i> Me déconnecter
                </a>
            </div>
        </div>
        {% endif %}

        <div class="auth-card">
            <div class="auth-header">
                <h1><i class="fas fa-sign-in-alt"></i> Me connecter</h1>
                <p>Accédez à votre espace personnel</p>
            </div>

            {% if error %}
            <div class="auth-error">
                <i class="fas fa-exclamation-circle"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}

            <form method="post" class="auth-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="auth-form-field">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                           class="auth-input" placeholder="email@exemple.com" required autofocus>
                </div>

                <div class="auth-form-field">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" 
                           class="auth-input" placeholder="••••••••" required>
                </div>

                <div class="auth-form-check">
                    <label>
                        <input type="checkbox" name="_remember_me">
                        <span>Se souvenir de moi</span>
                    </label>
                </div>

                <button type="submit" class="auth-submit">
                    <i class="fas fa-sign-in-alt"></i> Me connecter
                </button>

                <div class="auth-footer-links">
                    <a href="#"><i class="fas fa-question-circle"></i> Mot de passe oublié ?</a>
                    <a href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i> Créer un compte</a>
                </div>
            </form>
        </div>
    </main>
</div>
{% endblock %}