{% extends 'base.html.twig' %}

{% block title %}{{ annonce.titre }} - ChezToiChezMoi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/annonce.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="annonce-fullpage">
    {# Colonne Images #}
    <div class="annonce-gallery-container">
        <div class="gallery-content">
            {% if annonce.images|length > 0 %}
                <div class="main-image">
                    <img src="{{ asset('uploads/images/' ~ annonce.images[0].nom) }}" alt="{{ annonce.titre }}">
                </div>
                {% if annonce.images|length > 1 %}
                <div class="thumbnail-grid">
                    {% for image in annonce.images %}
                    <div class="thumbnail">
                        <img src="{{ asset('uploads/images/' ~ image.nom) }}" alt="Image {{ loop.index }}">
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            {% else %}
                <div class="main-image">
                    <img src="{{ asset('images/default-room.jpg') }}" alt="Chambre par défaut">
                </div>
            {% endif %}
        </div>
    </div>

    {# Colonne Informations #}
    <div class="annonce-info-container">
        <div class="annonce-info-content">
            <div class="annonce-header">
                <h1>{{ annonce.titre }}</h1>
                <div class="annonce-price">{{ annonce.prix }}€ <span>/nuit</span></div>
            </div>

            <div class="annonce-meta">
                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="meta-content">
                        <h4>Adresse</h4>
                        <p>{{ annonce.adresse }}, {{ annonce.ville }}</p>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-user-friends"></i>
                    </div>
                    <div class="meta-content">
                        <h4>Capacité</h4>
                        <p>{{ annonce.nbPersonne }} personne{{ annonce.nbPersonne > 1 ? 's' : '' }}</p>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="meta-content">
                        <h4>Disponibilité</h4>
                        <p>À partir du {{ annonce.disponibilite|date('d/m/Y') }}</p>
                    </div>
                </div>

                <div class="meta-item">
                    <div class="meta-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="meta-content">
                        <h4>Date de création</h4>
                        <p>{{ annonce.dateCreation|date('d/m/Y') }}</p>
                    </div>
                </div>
            </div>

            <div class="annonce-description">
                <h2><i class="fas fa-align-left"></i> Description</h2>
                <p>{{ annonce.description }}</p>
            </div>

            <div class="annonce-actions">
                <a href="{{ path('annonce_list') }}" class="return-btn">
                    <i class="fas fa-arrow-left"></i> Retour aux annonces
                </a>

                {% if app.user and app.user.id == annonce.idUtilisateur.id %}
                <div class="owner-actions">
                    <a href="{{ path('annonce_edit', { id: annonce.id }) }}" class="edit-btn">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <a href="{{ path('annonce_delete', { id: annonce.id }) }}" 
                       class="delete-btn"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?');">
                        <i class="fas fa-trash"></i> Supprimer
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}