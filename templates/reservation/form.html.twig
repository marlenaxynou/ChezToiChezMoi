{# filepath: templates/reservation/form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réserver {{ annonce.titre }}{% endblock %}

{% block body_class %}reservation-page{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="reservation-container">
            <h1 class="reservation-header">Réserver {{ annonce.titre }}</h1>

            <div class="room-card">
                {% if annonce.images|length > 0 %}
                    <img src="{{ asset('uploads/images/' ~ annonce.images|first.chemin) }}" alt="{{ annonce.titre }}">
                {% endif %}
                <div class="room-info">
                    <h2>{{ annonce.titre }}</h2>
                    <p>{{ annonce.description }}</p>
                    <p><strong>Prix :</strong> {{ annonce.prix }} € / nuit</p>
                </div>
            </div>

            <p>Date d'arrivée: {{ arrival }}</p>
            <p>Date de départ: {{ departure }}</p>

            <form method="post" action="{{ path('app_reservation', {'id': annonce.id, 'arrival': arrival, 'departure': departure}) }}" class="reservation-form">
                <input type="hidden" name="date_debut" value="{{ arrival }}">
                <input type="hidden" name="date_fin" value="{{ departure }}">
                <button type="submit" class="btn-reserver">Réserver</button>
            </form>
        </div>
    </main>
{% endblock %}