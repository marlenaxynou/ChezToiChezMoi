{% extends 'base.html.twig' %}

{% block title %}M'inscrire - ChezToiChezMoi{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
{% endblock %}

{% block body %}
<div class="auth-page">
    <main class="auth-container">
        {% if app.user %}
        <div class="auth-alert">
            <i class="fas fa-user-check"></i>
            <div>
                <p>Vous êtes déjà connecté(e) en tant que <strong>{{ app.user.userIdentifier }}</strong></p>
                <a href="{{ path('app_logout') }}" class="auth-logout">
                    <i class="fas fa-sign-out-alt"></i> Me déconnecter
                </a>
            </div>
        </div>
        {% endif %}

        <div class="auth-card">
            <div class="auth-header">
                <h1><i class="fas fa-user-plus"></i> M'inscrire</h1>
                <p>Rejoignez notre communauté de voyageurs</p>
            </div>

            {{ form_start(registrationForm, {'attr': {'class': 'auth-form', 'method': 'post'}}) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="auth-form-group">
                    <div class="auth-form-row">
                        <div class="auth-form-field">
                            {{ form_label(registrationForm.prenom) }}
                            {{ form_widget(registrationForm.prenom, {
                                'attr': {
                                    'class': 'auth-input',
                                    'placeholder': 'Votre prénom'
                                }
                            }) }}
                            {{ form_errors(registrationForm.prenom) }}
                        </div>
                        <div class="auth-form-field">
                            {{ form_label(registrationForm.nom) }}
                            {{ form_widget(registrationForm.nom, {
                                'attr': {
                                    'class': 'auth-input',
                                    'placeholder': 'Votre nom'
                                }
                            }) }}
                            {{ form_errors(registrationForm.nom) }}
                        </div>
                    </div>

                    <div class="auth-form-field">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'auth-input',
                                'placeholder': 'Votre email'
                            }
                        }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="auth-form-field">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'auth-input',
                                'placeholder': '••••••••'
                            }
                        }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="auth-form-check">
                        <label>
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <span>J'accepte les <a href="#">conditions d'utilisation</a></span>
                        </label>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="auth-submit">
                        <i class="fas fa-user-plus"></i> M'inscrire
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="auth-footer">
                <p>Déjà inscrit(e) ? <a href="{{ path('app_login') }}">Me connecter</a></p>
            </div>
        </div>
    </main>
</div>
{% endblock %}